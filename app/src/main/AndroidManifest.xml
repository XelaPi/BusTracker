<?xml version="1.0" encoding="utf-8"?>
<manifest
		package="com.blaine.bustracker"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:versionCode="1"
		android:versionName="1.0">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>

	<permission
			android:name="com.blaine.bustracker.permission.C2D_MESSAGE"
			android:protectionLevel="signature"/>

	<uses-permission android:name="com.blaine.bustracker.permission.C2D_MESSAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
			android:icon="@drawable/launcher"
			android:allowBackup="false"
			android:label="@string/app_name">
		<meta-data
				android:name="com.google.android.gms.version"
				android:value="@integer/google_play_services_version"/>

		<activity
				android:name=".ActivityLoad"
				android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>

				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>

				<data android:scheme="http"/>
				<data android:host="www.piguy.net/bustracker"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".ActivityMain"
				android:label="@string/app_name"
				android:launchMode="singleTop"
				android:parentActivityName=".ActivityLoad"
				android:screenOrientation="portrait"
				android:windowSoftInputMode="stateHidden"
				>
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value=".ActivityLoad"/>
		</activity>
		<activity
				android:name=".ActivityLogin"
				android:label="@string/title_login"
				android:parentActivityName=".ActivityMain"
				android:screenOrientation="portrait"
				android:windowSoftInputMode="stateHidden"
				>
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value=".ActivityMain"/>
		</activity>
		<activity
				android:name=".BusDialog"
				android:label="@string/bus_title"
				android:parentActivityName=".ActivityMain"
				android:theme="@android:style/Theme.DeviceDefault.Dialog"
				>
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value=".ActivityMain"/>
		</activity>

		<receiver
				android:name="com.google.android.gms.gcm.GcmReceiver"
				android:permission="com.google.android.c2dm.permission.SEND"
				android:exported="true">

			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE"/>
				<action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

				<category android:name="com.blaine.bustracker"/>
			</intent-filter>
		</receiver>

		<service
				android:name=".GCMService"
				android:exported="false">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE"/>
			</intent-filter>
		</service>
		<service
				android:name=".IIDListenerService"
				android:exported="false">
			<intent-filter>
				<action android:name="com.google.android.gms.iid.InstanceID"/>
			</intent-filter>
		</service>
	</application>
</manifest>
