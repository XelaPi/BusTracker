<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.blaine.bustracker">
    <item android:state_checked="true" app:state_favorite_bus="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green" />
            <stroke android:width="2dp" android:color="@color/blue" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" />
            <stroke android:width="2dp" android:color="@color/blue" />
        </shape>
    </item>
    <item android:drawable="@color/green" app:state_favorite_bus="true" />
    <item android:drawable="@color/yellow" />
</selector>